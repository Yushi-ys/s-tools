{
  "name": "s-tools",
  "private": true,
  "version": "1.0.0",
  "author": {
    "name": "超爱徐老师的涛涛"
  },
  "license": "MIT",
  "type": "module",
  "main": "main.ts",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "pack": "electron-builder --win"
  },
  "build": {
    "appId": "com.19990703.sTools",
    "productName": "sTools",
    "win": {
      "icon": "public/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "ahooks": "^3.9.6",
    "antd": "^5.27.3",
    "classnames": "^2.5.1",
    "concurrently": "^9.1.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.5",
    "yarn": "^1.22.22",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "less": "^4.4.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}