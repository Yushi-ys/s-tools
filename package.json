{
  "name": "s-tools",
  "private": true,
  "version": "1.0.0",
  "author": {
    "name": "Ë∂ÖÁà±ÂæêËÄÅÂ∏àÁöÑÊ∂õÊ∂õ"
  },
  "license": "MIT",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"vite --port 3001\" \"cross-env NODE_ENV=dev electron .\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "pack": "npm run build && cross-env NODE_ENV=prod electron-builder",
    "dist": "npm run build && cross-env NODE_ENV=prod electron-builder --publish=never",
    "dist:mac-arm64": "npm run build && cross-env NODE_ENV=prod electron-builder --mac --arm64",
    "start": "echo \"üéØ ÂêØÂä®ÊúçÂä°...\" && npm run dev"
  },
  "build": {
    "appId": "com.19990703.sTools",
    "productName": "sTools",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "electron-server.js",
      "server/deepseek.js",
      "src/db/**/*",
      "src/utils/class.js"
    ],
    "win": {
      "icon": "public/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "public/entitlements.mac.plist",
      "entitlementsInherit": "public/entitlements.mac.plist"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "public/icon.jpg",
        "to": "public/icon.jpg"
      },
      {
        "from": "public/icon.ico",
        "to": "public/icon.ico"
      }
    ],
    "asar": true,
    "compression": "normal",
    "npmRebuild": false
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "ahooks": "^3.9.6",
    "antd": "^5.27.3",
    "auto-launch": "^5.0.6",
    "axios": "^1.13.2",
    "better-sqlite3": "^11.10.0",
    "cheerio": "^1.1.2",
    "classnames": "^2.5.1",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "lodash": "^4.17.21",
    "node-gyp": "^12.0.0",
    "openai": "^6.9.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.5",
    "react-syntax-highlighter": "^16.1.0",
    "yarn": "^1.22.22",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@eslint/js": "^9.33.0",
    "@types/crypto-js": "^4.2.2",
    "@types/lodash": "^4.17.20",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.1.7",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitejs/plugin-react": "^5.0.0",
    "cross-env": "^10.1.0",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "less": "^4.4.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
